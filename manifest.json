{
	"default_locale":"en",
	"name": "ColorFinder",
	"version": "0.1",
	"manifest_version": 2,
	"description": "This is extension for Chrome. It let you easily find color value in hex, rgb and hsl with it's name.",
	
	"browser_action": {
	    "default_icon": "icons/icon.png",
		"default_popup": "popup.html"
	},
	"options_page": "options.html",
	"background": { "scripts": ["functions.js", "background.js"] },
	"permissions": [
    	"tabs"
  	],
  	"icons": {
    "128": "icons//icon.png"
  	}
}